  
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: @user.name %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: @user.email %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :age %>
        <%= f.text_field :age, placeholder: @user.age %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, placeholder: @user.location %>
      </div>
      <br>
      <h3>Bucket List Items</h3>
        <%= f.fields_for :list_item do |ff| %>
          <fieldset id="list-items">
            <div class="list_item">
              <div class="form-group">
                <%= ff.label :name, "Add an Item" %>
                <%= ff.text_field :name %>
              </div>
              <div class="form-group">
                <%= ff.check_box :_destroy, class: "remove" %>
                <%= ff.label :_destroy, "Remove an Item" %>
              </div>
            </div>
          </fieldset>
        <% end %>
        <button id="add_exercise" class="form-submit-btn"><h4>Add Another List Item<h4></button>
        <br><br>
        <hr>
        <div class="actions">
          <button type="submit" class="form-submit-btn">Save Your Bucket List</button>   
        </div>
    <% end %>


    




