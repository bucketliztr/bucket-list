  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "bucket_list" %></title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "application" %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

  </head>
  <body>
    <div class="container">
      <div class="header">
        <ul class="nav nav-pills pull-right">
          <li>
            <%= link_to "Browse Bucket Lists", users_path %>
          </li>
          <li>
            <a href="http://observando.net/">Inspiration</a>
          </li>
          <li>
            <%= link_to "About", pages_about_path %>
          </li>
        </ul>
        <h3 class="text-muted"><%= link_to "Bucketliztr", root_path %></h3>
      </div>

      <div class="container">
        <div class="row">
          <div class="social">
            <a href="#" ><span class="social-item"><i class="entypo-facebook"></i></span></a>
            <a href="#"><span class="social-item"><i class="entypo-twitter"></i></span></a>
            <a href="#"><span class="social-item"><i class="entypo-gplus"></i></span></a>
            <a href="#"><span class="social-item"><i class="entypo-pinterest"></i></span></a>
          </div>
        </div>
      </div>

  

<%= yield %>


      <!-- FOOTER -->
      <footer>
        <br />
        <div class="container">
          <div class="row">
            <hr>
          <p class="pull-right"><%= link_to "Back to top", root_path %></p>
          <p>&copy; 2013 Bucketliztr</p>
          </div>
        </div>
      </footer>

    </div><!-- /.container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
    <%= yield(:page_javascript) if content_for?(:page_javascript) %>

  </body>
</html>
